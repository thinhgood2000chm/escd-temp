<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Thêm sản phẩm</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <style>
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-8 border mt-3 pt-3 rounded mx-3">
                <div class="form-group text-small">
                    <small><a href="/">Quay lại</a></small>
                </div>
                <h4 class="text-success">Sửa thông tin sản phẩm</h4>
                <form class="mt-3" method="POST" enctype="multipart/form-data" action="/update" >
                    <input type="hidden" id="id" name = "id" value= "<%=result._id%>">
                    <div class="form-group">
                        <label for="user">Loại sản phẩm</label>
                        <input class="form-control" type="text" placeholder="Nhập loại sản phẩm" id="name" name="type" value="<%=result.type%>">
                    </div>

                    <div class="form-group">
                        <label for="user">Tên sản phẩm</label>
                        <input class="form-control" type="text" placeholder="Nhập tên sản phẩm" id="name" name="name" value="<%=result.name%>">
                    </div>
                    <div>
                        <div class="form-group">
                            <label for="pass2">Giá sản phẩm</label>
                        
                            <input class="form-control" type="number" placeholder="Nhập giá bán" id="price" name="price" value="<%=result.name%>">
                        </div>
                        <div class="form-group">
                            <label for="pass2">giảm gía</label>
                        
                            <input class="form-control" type="number" placeholder="Nhập giảm gía nếu có" id="discount" name="discount" value="<%=result.discount%>">
                            <label for="pass2">ngày bắt đầu</label>
                            <label for="pass2" id="end">ngày kết thúc</label>
                            <div>
                            <input class="" type="date" placeholder="27/05/2020" id="timeS" name="timeS" value="<%=result.timestart%>">
                            
                            <input class="" type="date" placeholder="27/05/2020" id="timeE" name="timeE" value="<%=result.timeend%>">
                            </div>
                        </div>
                     </div>
                    <div class="form-group">
                        <label for="pass2">Ảnh sản phẩm</label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFile" name="image">
                            <label class="custom-file-label text-truncate" for="customFile"></label>
                        </div>
                    </div>
                
                    <div class="form-group">
                        <label for="pass2">Mô tả</label>
                        <textarea id ="textarea"class="form-control" rows="4" name="desc" value="<%=result.description%>"><%=result.description%></textarea>
                    </div>

                    <div class="form-group" id = "color">
                        <label for="chooseColor">chọn màu</label>
                        <input class="form-control" type="text" placeholder="Nhập màu sắc vd: đỏ"  name="color" value="">
                       
                    </div>
                    
                    <button type ="button" class="btn btn-info" id="addInput">thêm</button>
                   
                    <br>
                    <br>
    
                    <div class="form-group" id = "size">
                        <label for="chooseSize">nhập size</label>
                        <input class="form-control" type="text" placeholder="Nhập kích cỡ vd: S"  name="size" value="">
                       
                    </div>
                    <button type ="button" class="btn btn-info" id="addInputSize">thêm</button>
    
                    <br>
    
                    <div class="form-group" id = "amount">
                        <label for="chooseAmount">nhập số lượng </label>
                        <input class="form-control" type="text" placeholder="Nhập số lượng tương ứng"  name="amount" value="">
                       
                    </div>
    
    
                        <div class="alert alert-danger">
                     
                        </div>
                    <input type="text hidden" value ="" name = "inputColor" id="inputColor">
    
                    <input type="text hidden" value ="" name = "inputSize" id="inputSize">
    
                    <input type="text hidden" value ="" name = "inputAmount" id="inputAmount">
                    <div class="form-group">
                        <button id="btnUpdate" class="btn btn-success mr-2">Cập nhật sản phẩm</button>
                    </div>
                       
                </form>
            </div>
        </div> 
        
        
    </div>


    <script>
        // Add the following code if you want the name of the file appear on select
       /* $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });*/
       
        var count = 0 
        $("#addInput").click(()=>{
           // console.log(input);
            var IdColorInput= document.getElementById("color")
            var input = document.createElement("INPUT")
            input.setAttribute('name','color'+count)
            input.setAttribute('class','form-control')
            input.setAttribute('type','text')
            input.setAttribute('placeholder','Nhập màu sắc vd: đỏ')
    
            IdColorInput.appendChild(input);
            count = count +1
            console.log(count);
        })
        var countSizeInput = 0 
    
        $("#addInputSize").click(()=>{
            
            // console.log(input);
             var addInputSize= document.getElementById("size")
             var input = document.createElement("INPUT")
             input.setAttribute('name','size'+countSizeInput)
             input.setAttribute('class','form-control')
             input.setAttribute('type','text')
             input.setAttribute('placeholder','Nhập kích cỡ vd: S ')
     
             addInputSize.appendChild(input);
             countSizeInput = countSizeInput +1
       
             console.log(countSizeInput);
             
            // tự động tạo input nhập số lượng dựa trên số size
             var createInputamount = document.getElementById("amount")
            inputAmount=document.createElement("INPUT")
            createInputamount.appendChild(inputAmount)
            inputAmount.setAttribute('name','amount'+countSizeInput)
            inputAmount.setAttribute('class','form-control')
            inputAmount.setAttribute('type','text')
            inputAmount.setAttribute('placeholder','Nhập số lượng tương ứng')
             
         })
    
         // lấy giá trị tất cả các input 
         var listSize = []
         var  listColor =[]
         var listAmount=[]
         $('#btnUpdate').click(()=>{
    
            // lấy tất cả giá trị input color 
            var countColor= 0
            var countSize= 0
            let parentColor  = document.querySelector('#color')
            let itemColor = parentColor.querySelectorAll('input')
            console.log(itemColor);
            for( var i = 0 ;i< itemColor.length;i++){
                listColor.push(itemColor[i].value)
                countColor= countColor+1
            }
    
            // lấy tất cả giá trị input size
            let parentSize  = document.querySelector('#size')
            let itemSize = parentSize.querySelectorAll('input')
            for( var i = 0 ;i< itemSize.length;i++){
                listSize.push(itemSize[i].value)
                countSize = countSize+1
            }
    
              // lấy tất cả giá trị input amount
            let parentAmount  = document.querySelector('#amount')
            let itemAmount = parentAmount.querySelectorAll('input')
            for( var i = 0 ;i< itemAmount.length;i++){
                listAmount.push(itemAmount[i].value)
            }
            console.log(listAmount);
            console.log(listSize);
          
            //var fetchColor= Object.assign({},listFetchColor)   // chuyển đổi từ String qua json
           // var fetchSize= Object.assign({},listFetchSize)
            document.getElementById("inputColor").value =listColor 
            document.getElementById("inputSize").value = listSize
            document.getElementById("inputAmount").value = listAmount
    
         
         })
        
    </script>
</body>
</html>